citHeader("To cite package 'bigQueryR' in publications use:")
     
 year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
 vers <- paste("R package version", meta$Version)
 
 citEntry(entry="Manual",
          title = "bigQueryR: Interface with Google BigQuery with Shiny Compatibility",
          author = personList(as.person("Mark Edmondson")),
          year = year,
          note = vers,
          textVersion =
          paste("Mark Edmondson (",
                year,
                "). bigQueryR: Interface with Google BigQuery with Shiny Compatibility. ",
                vers, ".", sep=""))
