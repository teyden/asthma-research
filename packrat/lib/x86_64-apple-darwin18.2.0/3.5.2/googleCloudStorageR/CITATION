citHeader("To cite package 'googleCloudStorageR' in publications use:")
     
 year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
 vers <- paste("R package version", meta$Version)
 
 citEntry(entry="Manual",
          title = "googleCloudStorageR: R Interface with Google Cloud Storage",
          author = personList(as.person("Mark Edmondson")),
          year = year,
          note = vers,
          textVersion =
          paste("Mark Edmondson (",
                year,
                "). googleCloudStorageR: R Interface with Google Cloud Storage. ",
                vers, ".", sep=""))
